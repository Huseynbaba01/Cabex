<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enter_navigation"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.arif.cabex.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="isEmailSection"
            app:argType="boolean"/>
        <action
            android:id="@+id/action_loginFragment_to_forgetPassword2"
            app:destination="@id/forgetPassword2" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.arif.cabex.ui.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_OTPFragment"
            app:destination="@id/OTPFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" >
        </action>
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.arif.cabex.ui.fragment.OTPFragment"
        android:label="fragment_o_t_p"
        tools:layout="@layout/fragment_o_t_p" >
        <argument
            android:name="password"
            app:argType="string"
            />
        <argument
            android:name="countryCode"
            app:argType="string"
            />
        <argument
            android:name="phoneNumber"
            app:argType="string"
            />
    </fragment>
    <fragment
        android:id="@+id/forgetPassword2"
        android:name="com.arif.cabex.ui.fragment.ForgetPassword"
        android:label="fragment_forget_password"
        tools:layout="@layout/fragment_forget_password" >
        <argument
            android:name="isEmailSelected"
            app:argType="boolean"/>
    </fragment>
</navigation>